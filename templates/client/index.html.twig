{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}


        <div class="row">
            <div class="offset-3 col-5">
                {{ form_start(formSearch) }}
                {{ form_widget(formSearch.nom) }}
                {{ form_end(formSearch) }}
            </div>

        </div>
        <div class="row">

            <div class="col-3">

                <div class="card">
                    <div class="card">
                        {{ form_start(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
            <div class=" col-9">
                <h1>Liste des Clients</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Prenom</th>
                        <th>Nom</th>
                        <th>Entreprise</th>
                        <th>Secteur</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.Prenom }}</td>
                            <td>{{ client.Nom }}</td>
                            <td>{{ client.Entreprise }}</td>
                            <td>{{ client.Secteur }}</td>
                            <td>
                                <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                                <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

{% endblock %}
